# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=codesensei

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# OpenAI Configuration (for AI content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Rate limiting and scraper configuration
SCRAPER_DELAY=1000
SCRAPER_MAX_RETRIES=3
SCRAPER_USER_AGENT_ROTATION=true

# Optional: Worker service configuration
WORKER_ENABLED=true
WORKER_INTERVAL=30000
WORKER_MAX_CONCURRENT_JOBS=3
